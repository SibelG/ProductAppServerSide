<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.productappserverside">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProductAppServerSide">
        <activity
            android:name=".view.TrackingOrderActivity"
            android:exported="true" />
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".view.OrderStatusActivity"
            android:exported="true" />
        <activity
            android:name=".view.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".view.ProductListActivity"
            android:exported="true" />
        <activity
            android:name=".view.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".view.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".view.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>